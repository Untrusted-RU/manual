{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "classes.json",
    "description": "A schema for data/classes.json",
    "type": "object",
    "required": [
        "classes"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "classes": {
            "type": "object",
            "patternProperties": {
                "^[A-Z][A-Z_]*$": {
                    "$ref": "#/definitions/Class"
                }
            },
            "minProperties": 1,
            "additionalProperties": false
        }
    },
    "definitions": {
        "Class": {
            "title": "Class",
            "required": [
                "title",
                "icon_id",
                "unique",
                "guaranteed",
                "faction",
                "type",
                "skills",
                "description"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "minLength": 1
                },
                "icon_id": {
                    "type": "integer",
                    "minimum": 0
                },
                "unique": {
                    "type": "boolean",
                    "default": true
                },
                "guaranteed": {
                    "type": "boolean",
                    "default": true
                },
                "faction": {
                    "$ref": "#/definitions/Faction"
                },
                "win_condition": {
                    "type": "string",
                    "minLength": 1
                },
                "type": {
                    "$ref": "#/definitions/ClassType"
                },
                "hack_chance": {
                    "$ref": "#/definitions/HackChance"
                },
                "skills": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/SkillID"
                    }
                },
                "description": {
                    "type": "string",
                    "minLength": 1
                },
                "class_restriction": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "anyOf": [
                {
                    "properties": {
                        "faction": {
                            "const": "NEUTRAL"
                        }
                    },
                    "required": [
                        "win_condition"
                    ]
                },
                {
                    "properties": {
                        "faction": {
                            "const": "NETSEC"
                        }
                    },
                    "required": [
                        "hack_chance"
                    ]
                },
                {
                    "properties": {
                        "faction": {
                            "const": "AGENT"
                        }
                    }
                }
            ]
        },
        "ClassType": {
            "title": "Class type",
            "type": "string",
            "enum": [
                "Оперативник",
                "Исследователь",
                "Нападающий",
                "Особый"
            ]
        },
        "Faction": {
            "title": "Faction",
            "type": "string",
            "enum": [
                "AGENT",
                "NETSEC",
                "NEUTRAL"
            ]
        },
        "HackChance": {
            "title": "Hack chance",
            "oneOf": [
                {
                    "type": "string",
                    "enum": [
                        "очень высокий",
                        "высокий",
                        "средний",
                        "низкий",
                        "очень низкий"
                    ]
                },
                {
                    "type": "boolean",
                    "const": false
                }
            ]
        },
        "SkillID": {
            "title": "Skill ID",
            "type": "string",
            "pattern": "^[A-Z][A-Z0-9_]*$"
        }
    }
}
